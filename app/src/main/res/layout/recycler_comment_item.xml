<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:layout_marginBottom="0.5dp"
    >
    
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/comment_user_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@mipmap/avatar_test"
        />
    
    <TextView
        android:id="@+id/comment_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/comment_user_avatar"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/black"
        />
    
    <TextView
        android:id="@+id/comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/comment_content"
        android:layout_marginStart="64dp"
        android:textSize="12sp"
        android:textColor="@color/gray_8a8a8a"
        />

    <TextView
        android:id="@+id/comment_floor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comment_user_name"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/comment_content"
        android:layout_marginEnd="16dp"
        android:textColor="@color/gray_8a8a8a"
        android:textSize="14sp"
        />
    
    <TextView
        android:id="@+id/comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_below="@+id/comment_user_avatar"
        android:layout_toEndOf="@+id/comment_user_avatar"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        />
</RelativeLayout>