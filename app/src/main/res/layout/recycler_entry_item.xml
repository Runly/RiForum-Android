<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    card_view:cardCornerRadius="2dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        >

        <com.pkmmte.view.CircularImageView
            android:id="@+id/user_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/avatar"
            />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/user_avatar"
            android:layout_marginStart="8dp"
            android:text="hahaa"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            />

        <TextView
            android:id="@+id/user_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/user_avatar"
            android:layout_below="@+id/user_name"
            android:layout_marginStart="8dp"
            android:layout_marginTop="6dp"
            android:text="1级"
            android:textSize="12sp"
            android:textColor="@color/gray_8a8a8a"
            />

        <TextView
            android:id="@+id/plate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:text="实时新闻"
            android:textColor="@color/gray_8a8a8a"
            android:textSize="12sp"
            android:background="@drawable/entry_item_text_border"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_avatar"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/title_test"
            />

        <LinearLayout
            android:id="@+id/image_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_below="@+id/title"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:src="@mipmap/a1"
                android:scaleType="fitXY"
                tools:ignore="contentDescription"
                />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:scaleType="fitXY"
                android:src="@mipmap/a2"
                tools:ignore="contentDescription"
                />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:scaleType="fitXY"
                android:src="@mipmap/a3"
                tools:ignore="contentDescription"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_linear"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:text="9秒前"
            />

        <ImageView
            android:id="@+id/comment"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/image_linear"
            android:layout_toEndOf="@+id/time"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:src="@mipmap/comment"
            />

        <TextView
            android:id="@+id/comment_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_linear"
            android:layout_toEndOf="@+id/comment"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:text="1024"
            />


    </RelativeLayout>

</android.support.v7.widget.CardView>