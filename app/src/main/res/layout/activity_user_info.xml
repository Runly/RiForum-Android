<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_info_avatar"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@mipmap/avatar_default"
            tools:ignore="contentDescription"
            />

        <ImageView
            android:id="@+id/decoration"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="bottom|end"
            android:src="@mipmap/album"
            tools:ignore="contentDescription"
            />

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/normal_bg"
        >

        <include layout="@layout/view_dividing_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            >


            <TextView
                android:id="@+id/uer_info_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="100dp"
                android:text="@string/user_nike"
                android:layout_marginStart="32dp"
                />

            <EditText
                android:id="@+id/user_info_name_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:enabled="false"
                android:focusable="false"
                android:textCursorDrawable="@drawable/edit_cursor"/>

        </LinearLayout>

        <include layout="@layout/view_dividing_line"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/normal_bg"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            >


            <TextView
                android:id="@+id/uer_info_gender_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="100dp"
                android:text="@string/gender"
                android:layout_marginStart="32dp"
                />

            <EditText
                android:id="@+id/user_info_gender_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:enabled="false"
                android:focusable="false"
                />

        </LinearLayout>

        <include layout="@layout/view_dividing_line"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        android:background="@color/normal_bg"
        >

        <include layout="@layout/view_dividing_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            >


            <TextView
                android:id="@+id/uer_info_id_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="100dp"
                android:text="@string/user_id"
                android:layout_marginStart="32dp"
                />

            <EditText
                android:id="@+id/user_info_id_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:background="@null"
                android:focusable="false"
                />

        </LinearLayout>

        <include layout="@layout/view_dividing_line"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/normal_bg"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            >


            <TextView
                android:id="@+id/uer_info_account_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="100dp"
                android:text="@string/account"
                android:layout_marginStart="32dp"
                />

            <EditText
                android:id="@+id/user_info_account_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:background="@null"
                android:focusable="false"
                />

        </LinearLayout>

        <include layout="@layout/view_dividing_line"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/normal_bg"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            >


            <TextView
                android:id="@+id/uer_info_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="100dp"
                android:text="@string/sign_in_time"
                android:layout_marginStart="32dp"
                />

            <EditText
                android:id="@+id/user_info_time_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:background="@null"
                android:focusable="false"
                />

        </LinearLayout>

        <include layout="@layout/view_dividing_line"/>

    </LinearLayout>


</LinearLayout>